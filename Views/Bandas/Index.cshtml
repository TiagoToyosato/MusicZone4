@model List<Banda>
@{
    ViewData["Title"] = "Bandas";
}

@if (Model.Count == 0)
{
    <h2>Sem bandas ainda...</h2>
}
else
{
    <h2>As minhas bandas</h2>

    <table class="table table-condensed text-white">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Elementos</th>
                <th scope="col">Gênero</th>
                <th scope="col">TOP</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Banda b in Model)
            {
                <tr>
                    <td>@b.Nome</td>
                    <td>@b.Elementos</td>
                    <td>@b.Genero</td>
                    <td>
                        @if (b.TOP)
                        {
                            @:Sim
                        }
                        else
                        {
                            @:Não
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary" asp-action="AddBanda">Adicionar banda</a>